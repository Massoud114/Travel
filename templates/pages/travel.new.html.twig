								<li class="nav-item">
									<a class="nav-link active" data-toggle="tab" href="#home" role="tab"><i class="fa fa-hotel"></i> Vols</a>
								</li>
							</ul>
							<div class="clearfix"></div>
						</div>
						<div class="filter-output booking-form-box col-lg-8">
							<div class="tab-content padding-30px background-white">
								<form class="tab-pane active" id="travel-form">
									<div class="form-group mb-4">
										<label>Lieu de Depart:</label>
										<div class="search-input searchbox" id="">
											<input type="text" placeholder="Tapez pour rechercher.." class="suggest-input">
											<input type="hidden" value="" class="iata" id="originCode">
											<div class="autocom-box">
												<!-- here list are inserted from javascript -->
											</div>
											<div class="icon"><i class="fas fa-times"></i></div>
										</div>
									</div>
									<div class="form-group mb-4">
										<label>Destination:</label>
										<div class="search-input searchbox" id="">
											<input type="text" placeholder="Tapez pour rechercher.." class="suggest-input">
											<input type="hidden" value="" class="iata" id="destinationCode">
											<div class="autocom-box">
												<!-- here list are inserted from javascript -->
											</div>
											<div class="icon"><i class="fas fa-times"></i></div>
										</div>
									</div>
									<div class="form-group mb-4">
										<label>Date de Depart:</label>
										<div class="date-input">
											<input autocomplete="off" type="text" class="input-text datepicker full-width" id="travel-date"/>
										</div>
									</div>
									<div class="form-group mb-2">
										<label>Nombres de voyageurs:</label>
										<div>
											<input type="number" value="1" class="input-text" id="travel-adult"/>
										</div>
									</div>
									<button type="submit" class="btn-sm btn btn-lg btn-block background-main-color text-white text-center text-uppercase font-weight-600">
										<i class="fa fa-search"></i> Recherche de vols
									</button>
								</form>
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
	
			</div>
			<div class="col-lg-5 mt-4 loading-hidden" id="loading">
				<div class="container mt-4">
