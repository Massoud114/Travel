{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-7">
				<div id="search-filter-in" class="full-width sm-position-relative mt-5">
					<div class="search-filter row no-gutters box-shadow sm-tb-40px">
						<div class="filter-tabs col-lg-3 background-second-color">
							<img class="hidden-xs" src="https://images.unsplash.com/photo-1490430657723-4d607c1503fc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=300&q=130" alt=""/>
