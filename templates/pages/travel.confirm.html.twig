{% extends 'base.html.twig' %}

{% block body %}
	<div class="padding-tb-40px background-light-grey">
		<div class="container">
			<div class="row justify-content-center">

				<div class="col-lg-8">
					<!-- form -->
					<div class="background-white border border-grey-1 padding-30px margin-tb-30px">
						<h3 class="text-uppercase text-medium font-weight-700 border-bottom-1 border-second-color  padding-bottom-8px"><i class="fa fa-check-circle" aria-hidden="true"></i> Réservation terminé</h3>

						<ul class="margin-0px padding-0px list-unstyled">
							<li class="padding-tb-8px border-bottom-1 border-grey-1"><strong class="margin-right-30px">Nom de vol</strong>{{ travelData.originAirport }} </li>
