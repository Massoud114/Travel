{% extends 'base.html.twig' %}

{% block javascripts %}
	{{ encore_entry_script_tags('home') }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
	<div class="padding-tb-40px background-light-grey">
		<div class="container">
			<div class="row justify-content-center">

				<div class="col-lg-9">
					<!-- flight post -->
					<div class="flight-post background-white border-bottom-1 border-grey-1 with-hover box-shadow-hover margin-bottom-40px">
						<div class="row no-gutters">
							<div class="col-lg-4">
								<div class="hotel-img position-relative">
									<img src="https://images.unsplash.com/photo-1615561916422-7014e1078997?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" alt="">
									<div class="hover-option background-main-color opacity-6">
										<h3 class="text-center text-white padding-top-n-25 "></h3>
									</div>
								</div>
							</div>
							<div class="col-lg-8">
								<div class="padding-20px">
									<h3 class="text-uppercase text-medium font-weight-600"><a href="#" class="text-dark"><span class="margin-right-30px">De: {{ travelData.originCountry }}</span>à: {{ travelData.destinationCountry }}</a></h3>
									<a href="{{ path('travel.change') }}" class="float-lg-right btn-sm btn-lg background-grey-1 text-grey-2 text-center text-uppercase pull-top-30px text-small">Changer de Vol </a>
									<small class="text-uppercase text-extra-small margin-right-30px">
										<a href="" class="text-grey-4"><i class="fa fa-chevron-up margin-right-5px"></i>
											Depart :  <span class="text-third-color margin-right-5px">{{ travelData.departureDate }}</span> </a>
									</small>
									<small class="text-uppercase text-extra-small">
										<a href="" class="text-grey-4"><i class="fa fa-chevron-down margin-right-5px"></i>
											Retour :  <span class="text-third-color margin-right-5px">Non estimé</span> </a>
									</small>
									<div class="claerfix"></div>
									<div class="margin-top-8px padding-top-8px text-uppercase text-extra-small border-top-1 border-grey-1">
										<strong class="text-medium text-third-color padding-right-5px font-weight-bold">{{ flight.price.total }} {{ flight.price.currency }}</strong>Total
										<i class="d-block padding-tb-8px text-grey-2"><span class="margin-right-40px">{{ flight.oneWay ? 'Vol Direct' : 'Escale' }}</span>{{ flight.oneWay ? '' : flight.itineraries|length }}</i>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- // flight post -->

					<!-- form -->
					<div class="background-white border border-grey-1 padding-30px margin-tb-30px">
						<h3 class="text-uppercase text-medium font-weight-700 border-bottom-1 border-second-color  padding-bottom-8px">Product Billing Detais</h3>
						<div class="padding-top-10px">
							<form>
								<div class="form-row">
									<div class="form-group col-md-6">
										<label for="inputName">Prénoms</label>
										<input type="text" value="{{ app.user.firstname }}" class="form-control">
									</div>
									<div class="form-group col-md-6">
										<label for="inputEmail4">Nom </label>
										<input type="text" value="{{ app.user.lastname }}" class="form-control">
									</div>
								</div>
								<div class="form-row">
									<div class="form-group col-md-6">
										<label for="inputName">Email </label>
										<input type="email" value="{{ app.user.email }}" class="form-control">
									</div>
									<div class="form-group col-md-6">
										<label for="inputEmail4">Mobile  </label>
										<input type="tel" class="form-control">
									</div>
								</div>
								<a href="{{ path('travel.change') }}" class="btn-sm btn-lg text-dark text-center font-weight-bold text-uppercase rounded-0 padding-tb-10px padding-lr-30px background-grey-1 margin-right-20px">Changer de vol</a>
								<a href="{{ path('travel.pay') }}" class="btn-sm btn-lg  background-main-color text-white text-center font-weight-bold text-uppercase rounded-0 padding-tb-10px padding-lr-30px">Payer la réservation</a>
							</form>
						</div>
					</div>
					<!-- form -->


				</div>
				<!-- // col-lg-8 -->

			</div>
			<!-- // row -->
		</div>
		<!-- // container -->
	</div>
{% endblock %}
