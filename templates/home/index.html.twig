{% extends 'base.html.twig' %}

{% block javascripts %}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block header %}{% endblock %}

{% block footer %}
	<footer class="text-center text-lg-left">
		<div class="container">
			<div class="row padding-tb-30px border-top-1 border-grey-1">
				<div class="col-lg-4">
					<p class="text-lg-left"><span class="text-third-color">Travelz</span> | @2021 By Massoud FATAOU (Spider)</p>
				</div>
			</div>
		</div>
	</footer>
{% endblock %}

{% block body %}
	<header class="header-search" style="background: url(https://images.unsplash.com/photo-1578404205849-14299920c184?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2050&q=875) no-repeat; background-size: cover">
		<div class="search-ba">
			<div class="padding-tb-5px">
				<div class="container">
					<div class="row padding-tb-5px border-bottom-1 border-white">
						<div class="col-sm d-none d-sm-block">
							<ul class="user-area list-inline float-right margin-0px text-dark">
								{% if app.user %}
									<li class="list-inline-item padding-right-10px"><a href="{{ path('profile') }}">{{ app.user.username }}</a></li>
									<li class="list-inline-item"><a href="{{ path('app_logout') }}"><i class="fa fa-user-plus padding-right-5px"></i>Déconnexion</a></li>
								{% else %}
									<li class="list-inline-item padding-right-10px"><a href="{{ path('app_login') }}"><i class="fa fa-lock padding-right-5px"></i>Connexion</a></li>
									<li class="list-inline-item"><a href="{{ path('app_register') }}"><i class="fa fa-user-plus padding-right-5px"></i>S'inscrire</a></li>
								{% endif %}
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="header-search-output padding-tb-250px">
				<div class="container">
					<div class="row justify-content-md-center">
						<div class="col-lg-8 text-center">
							<div class="logo margin-bottom-60px"><a href="#"><img src="{{ asset('images/logo-2.png') }}" alt=""></a></div>
							<!--  search  -->
							<div>
								<h2><a href="{{ path('travel.new') }}" class="text-black">
									Commencer par réserver votre prochain vol
								</a></h2>
								</div>
							</div>
							<!-- // search  -->
						</div>
						<!-- // col-lg-6 -->
					</div>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<!-- // search ba -->

	</header>
	<!-- // Header  -->


{% endblock %}
